{
  "name": "shopify-buy-ui",
  "version": "0.0.0",
  "description": "The JS Buy UI library allows merchants to build Shopify interfaces into any website",
  "main": "build/shopify-buy-ui.js",
  "repository": "git@github.com:Shopify/shopify-buy-ui.git",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "styles": "NODE_PATH=./node_modules node ./script/css2js",
    "start": "npm run watch:src & npm run watch:css & npm run serve",
    "serve": "http-server",
    "watch:src": "watchify src/shopify-buy-ui.js -t babelify --outfile build/shopify-buy-ui.js -v",
    "watch:test": "watchify test/test.js -t babelify --outfile test/build/test.js -v",
    "watch:css": "watch 'npm run styles' src/styles/sass",
    "build": "npm run clean && npm run build:cjs && npm run build:globals && npm run polyfill && npm run uglify",
    "build:cjs": "NODE_PATH=./node_modules npm run styles && babel ./src --out-dir ./build",
    "build:globals": "browserify --ignore buffer build/shopify-buy-ui.js --outfile build/shopify-buy-ui.globals.js",
    "build:test": "browserify test/test.js -t babelify --outfile test/build/test.js",
    "polyfill": "NODE_PATH=./node_modules node ./script/polyfill.js",
    "uglify": "uglifyjs build/shopify-buy-ui.globals.polyfilled.js --output build/shopify-buy-ui.globals.polyfilled.min.js",
    "lint": "eslint src/*",
    "pretest": "npm run lint | npm run build:test",
    "test": "testem ci",
    "test:dev": "npm run watch:test | testem",
    "postinstall": "npm run build"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-core": "6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-shopify": "11.3.1-0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^2.13.1",
    "eslint-plugin-shopify": "^12.1.0",
    "http-server": "^0.9.0",
    "qunit": "^0.9.1",
    "sinon": "^1.17.4",
    "testem": "^1.9.1",
    "uglify-js": "^2.7.0",
    "watch": "^0.19.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "node-sass": "^3.8.0",
    "css": "^2.1.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-runtime": "^6.9.2",
    "hogan.js": "^3.0.2",
    "morphdom": "^1.4.3",
    "shopify-buy": "^0.2.1"
  }
}
